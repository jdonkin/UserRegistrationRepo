@CHARSET "ISO-8859-1";

form{border:0; margin:0; padding:0;}

.myform{
margin:0 auto;
width:400px;
padding:14px;
}

#stylized{
border:solid 2px BLACK;
background:#BFBD82;


}

#stylized input{
float:left;
font-size:12px;
padding:4px 2px;
border:solid 1px #aacfe4;
width:200px;
margin:2px 0 20px 10px;
}

#stylized label{
display:block;
font-weight:bold;
text-align:right;
width:140px;
float:left;
}

#stylized .good{
color: green;
display:block;
font-size:11px;
font-weight:normal;
text-align:right;
width:140px;
}

#stylized .small{
color: red;
display:block;
font-size:11px;
font-weight:normal;
text-align:right;
width:140px;
}


#stylized button{
clear:both;
margin-left:150px;
width:125px;
height:35px;
text-align:center;
line-height:31px;
font-size:11px;
font-weight:bold;
}





